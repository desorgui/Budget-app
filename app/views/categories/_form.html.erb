<%= form_with(model: category, class: "c-new-recipe-form c-card") do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, required: true  %>
  </div>

  <div>
    <%= form.hidden_field :photo, :value => "Photo" %>
  </div>

  <div class="c-new-recipe-form__upload">
    <%= form.label :upload_image, class: "upload_label" %>
    <%= form.file_field :image, required: true  %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
